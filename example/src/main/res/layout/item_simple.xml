<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:foreground="?attr/selectableItemBackground"
        android:orientation="vertical"
        android:layout_marginBottom="8dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp"
        >

    <RelativeLayout
            android:id="@+id/status_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            >

        <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/user_avatar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginRight="6dp"
                android:scaleType="centerCrop"
                app:riv_corner_radius="3dp"
                android:src="@mipmap/avatar"
                />

        <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/user_avatar"
                android:textColor="#4F9BBE"
                android:textSize="14sp"
                android:text="邵辉Vista"
                />

        <TextView
                android:id="@+id/status_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_name"
                android:layout_toRightOf="@id/user_avatar"
                android:textColor="#9EA4AB"
                android:textSize="12sp"
                android:text="14:32"
                />

        <TextView
                android:id="@+id/status_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/status_time"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@id/status_time"
                android:textColor="#9EA4AB"
                android:textSize="12sp"
                android:text="via 尚饭"
                />
    </RelativeLayout>

    <TextView
            android:id="@+id/status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColorLink="#5EC1F9"
            android:text="滴滴出行宣布与Uber全球达成战略协议，滴滴出行将收购优步中国的品牌、业务、数据等全部资产在中国大陆运营。双方达成战略协议后， 滴滴出行和优步的母公司Uber全球将相互持股，成为对方的少数股权股东"
            style="@style/AppTheme.StatusText"
            />


    <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="8dp"
            android:background="#F2F3F4"
            />
</LinearLayout>